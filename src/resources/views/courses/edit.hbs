<div class="mt-4">
  <h2>Sửa khóa học</h2>
  <form class="mt-3" method="post" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Nhập tên khóa học..."
        value="{{course.name}}"
      />
    </div>
        <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        placeholder="Nhập mô tả..."
      >{{course.description}}</textarea>
    </div>
        <div class="form-group">
      <label for="image">Link ảnh</label>
      <input
        type="text"
        class="form-control"
        id="image"
         name="image"
        placeholder="Điền link ảnh"
        value="{{course.image}}"
      />
    <button type="submit" class="btn btn-primary mt-4">Lưu</button>
  </form>
</div>
